<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Favorite count</th>
    <th>From user name</th>
    <th>Created at</th>
    <th>Id str</th>
    <th>Retweet count</th>
    <th>Hashtags</th>
    <th>Media</th>
    <th>Urls</th>
    <th>User mentions</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.text %></td>
    <td><%= tweet.favorite_count %></td>
    <td><%= tweet.from_user_name %></td>
    <td><%= tweet.created_at %></td>
    <td><%= tweet.id_str %></td>
    <td><%= tweet.retweet_count %></td>
    <td><%= tweet.hashtags %></td>
    <td><%= tweet.media %></td>
    <td><%= tweet.urls %></td>
    <td><%= tweet.user_mentions %></td>
    <td><%= tweet.place %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

